# Redis Client Configuration
# Copy this file to .env and update the values

# Connection settings
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Connection pool settings
REDIS_MAX_RETRIES=3
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_IDLE_CONNS=10
REDIS_POOL_SIZE=100
REDIS_POOL_TIMEOUT=4s
REDIS_CONN_MAX_IDLE_TIME=5m
REDIS_CONN_MAX_LIFETIME=0

# Timeout settings
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# TLS/SSL settings (optional)
REDIS_TLS_ENABLED=false
REDIS_TLS_CERT_FILE=
REDIS_TLS_KEY_FILE=
REDIS_TLS_CA_FILE=

# ====================
# Common Examples
# ====================

# Local Redis (default)
# REDIS_ADDR=localhost:6379

# Redis with password
# REDIS_ADDR=localhost:6379
# REDIS_PASSWORD=your_secure_password

# Redis Sentinel
# REDIS_ADDR=sentinel1:26379,sentinel2:26379
# REDIS_PASSWORD=your_password

# Redis Cloud / Managed Redis
# REDIS_ADDR=redis-12345.c1.us-east-1-2.ec2.cloud.redislabs.com:12345
# REDIS_PASSWORD=your_cloud_password
# REDIS_TLS_ENABLED=true

# Docker Compose
# REDIS_ADDR=redis:6379

# Production settings
# REDIS_ADDR=prod-redis.example.com:6379
# REDIS_PASSWORD=${REDIS_PASSWORD_SECRET}
# REDIS_POOL_SIZE=200
# REDIS_MAX_RETRIES=5
# REDIS_DIAL_TIMEOUT=10s
