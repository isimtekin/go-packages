# MongoDB Connection Configuration
# Copy this file to .env and update with your values

# Option 1: Full MongoDB URI (recommended)
MONGO_URI=mongodb://localhost:27017

# Option 2: Individual components (alternative to URI)
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_USERNAME=myuser
# MONGO_PASSWORD=mypassword
# MONGO_AUTH_SOURCE=admin

# Database name (required)
MONGO_DATABASE=myapp

# Connection Pool Settings (optional)
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10
MONGO_MAX_CONN_IDLE_TIME=5m

# Timeout Settings (optional)
MONGO_CONNECT_TIMEOUT=10s
MONGO_SOCKET_TIMEOUT=30s
MONGO_SERVER_SELECTION_TIMEOUT=10s
MONGO_OPERATION_TIMEOUT=30s

# Retry Settings (optional)
MONGO_RETRY_WRITES=true
MONGO_RETRY_READS=true

# Alternative prefix examples:
# Use DB_ prefix instead of MONGO_:
# DB_URI=mongodb://localhost:27017
# DB_DATABASE=myapp

# Or custom prefix:
# MYAPP_MONGO_URI=mongodb://localhost:27017
# MYAPP_MONGO_DATABASE=myapp
